#include <iostream>
#include <algorithm>
#include <string.h>

using namespace std;
int arr[1001];
int dp[2002];
int n;

int main()
{
	cin >> n;
	for (int i = 1; i <= n; i++)
		cin >> arr[i];
	for (int i = 2; i <= n; i++)
		dp[i] = 1001;
	dp[1] = 0;
	int num = 1;
	while (1)
	{
		for (int i = 0; i <= arr[num]; i++)
		{
			dp[num + i] = min(dp[num + i], dp[num] + 1);
		}
		num++;
		if (num >= n)
			break;
	}

	if (dp[n] == 1001)
		cout << -1 << endl;
	else
		cout << dp[n] << endl;
	return 0;
}
