#include<iostream>
using namespace std;

long long dp[1001][1001];
int n, k;
int main()
{
	cin >> n >> k;
	for (int i = 1; i <= 1000; i++)
	{
		dp[i][0] = 1;
		dp[i][i] = 1;
	}
	for (int i = 2; i <= n; i++)
	{
		for (int j = 1; j < i; j++)
		{
			dp[i][j] = (dp[i - 1][j - 1] + dp[i - 1][j]) % 10007;
		}
	}
	cout << dp[n][k] << endl;
	return 0;
}
