#include <iostream>
#include <string.h>
using namespace std;
int n;
int arr[2001];
int dp[2001][2001];

int main()
{
	int m;
	cin >> n;
	for (int i = 1; i <= n; i++)
	{
		scanf("%d", &arr[i]);
		dp[i][i] = 1;
	}
	for (int i = 1; i < n; i++)
	{
		if (arr[i] == arr[i + 1])
			dp[i][i + 1] = 1;
	}
	for(int l =2;l<n;l++)
		for (int i = 1; i + l <= n; i++)
		{
			int j = i + l;
			if (arr[i] == arr[j] && dp[i + 1][j - 1] == 1)
				dp[i][j] = 1;
		}
	cin >> m;
	for (int i = 0; i < m; i++)
	{
		int s, e;
		scanf("%d %d", &s, &e);
		printf("%d\n", dp[s][e]);
	}
	return 0;
}
