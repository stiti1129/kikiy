#include <iostream>
#include <algorithm>
using namespace std;

int arr[10001];
long long dp[10001][3];
int n;
int main()
{
	cin >> n;
	for (int i = 1; i <= n; i++)
		cin >> arr[i];
	dp[1][0] = 0;      // i번째 안먹
	dp[1][1] = arr[1]; // i번째 먹, i-1번째 안먹
	dp[1][2] = arr[1]; // i번째 먹, i-1번째 먹
	for (int i = 2; i <= n; i++)
	{
		dp[i][0] = max(dp[i-1][0], max(dp[i - 1][1], dp[i - 1][2]));
		dp[i][1] = dp[i - 1][0] + arr[i];
		dp[i][2] = dp[i - 1][1] + arr[i];
	}
	cout << max(dp[n][0], max(dp[n][1], dp[n][2])) << endl;
	return 0;
}
