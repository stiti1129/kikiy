#include <iostream>
#include <algorithm>
#include <math.h>
using namespace std;

int arr[1001];
int dp[1001]; // i번째까지 최대값?
int n;
int result = 0;
int main()
{
	cin >> n;
	for (int i = 1; i <= n; i++)
		cin >> arr[i];
	for (int i = 1; i <= n; i++)
	{
		for (int j = 0; j < i; j++)
		{
			if (dp[i - j-1] + abs(arr[i] - arr[i-j]) > dp[i])
			{
//				cout << i << ' ' << j<< ' '<< dp[i - j] <<' '<< abs(arr[i] - arr[i-j]) << endl;
				dp[i] = dp[i - j-1] + abs(arr[i] - arr[i-j]);
			}
		}
	}
//	for (int i = 1; i <= n; i++)
//		cout << dp[i] << ' ';
//	cout << endl;
	cout << dp[n] << endl;
	return 0;
}
