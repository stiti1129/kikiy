#include<iostream>

using namespace std;
int arr[5][2];
int main()
{
	int result = 0;
	int ans = 0;
	for (int i = 1; i <= 4; i++)
		cin >> arr[i][0] >> arr[i][1];
	for (int i = 1; i <= 4; i++)
	{
		result -= arr[i][0];
		result += arr[i][1];
		if (result > ans)
			ans = result;
	}
	cout << ans << endl;
	return 0;
}
