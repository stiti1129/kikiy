#include <iostream>
#include <algorithm>

using namespace std;
int arr[1001][1001];
int n, m;
int dp[1001][1001];

int main()
{
	cin >> n >> m;
	for (int i = 1; i <= n; i++)
		for (int j = 1; j <= m; j++)
			cin >> arr[i][j];
//	dp[1][1] = arr[1][1];
	for (int i = 1; i <= n; i++)
		for (int j = 1; j <= m; j++)
		{
			dp[i][j] = max(dp[i - 1][j - 1],max( dp[i][j - 1], dp[i - 1][j])) + arr[i][j];
		}
	cout << dp[n][m] << endl;
	return 0;
}
